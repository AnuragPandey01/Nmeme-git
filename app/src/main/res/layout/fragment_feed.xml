<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.view.FeedFragment">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linear_layout"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_loading"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/viewpager"
        app:layout_constraintEnd_toEndOf="@id/viewpager"
        app:layout_constraintStart_toStartOf="@id/viewpager"
        app:layout_constraintTop_toTopOf="@id/viewpager"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/download_meme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save"
        app:fabSize="mini"
        app:borderWidth="1dp"
        app:layout_constraintBottom_toTopOf="@id/fav_meme"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:contentDescription="@string/share" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/share_meme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share"
        app:fabSize="mini"
        app:borderWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:contentDescription="@string/share" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fav_meme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favourite"
        app:borderWidth="1dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/share_meme"
        app:layout_constraintEnd_toEndOf="@id/share_meme"
        app:layout_constraintStart_toStartOf="@id/share_meme"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_to_favourite" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawablePadding="-30dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:text="Anime"
            app:drawableStartCompat="@drawable/ic_edit" />

        <RadioGroup
            android:id="@+id/radio_grp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_hot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:enabled="true"
                android:layout_marginHorizontal="8dp"
                android:drawableStart="@drawable/ic_hot"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:textColor="@color/radio_text_selector"
                android:text="Hot" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_new"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:enabled="true"
                android:button="@android:color/transparent"
                android:layout_marginHorizontal="8dp"
                android:drawableStart="@drawable/ic_new"
                android:background="@drawable/radio_selector"
                android:drawablePadding="4dp"
                android:textColor="@color/radio_text_selector"
                android:text="New" />

            <RadioButton
                android:id="@+id/radio_top"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:button="@android:color/transparent"
                android:background="@drawable/radio_selector"
                android:layout_marginHorizontal="8dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_top"
                android:textColor="@color/radio_text_selector"
                android:text="Top" />

        </RadioGroup>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>